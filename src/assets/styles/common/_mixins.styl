hover($color, $td)
  position relative
  &:before
    content ""
    display block
    position absolute
    height 1px
    width 50%
    background-color $color
    left 0
    bottom 0
    opacity 1
    transition .3s left, .2s opacity

  &:after
    content ""
    display block
    position absolute
    height 1px
    width 50%
    background-color $color
    right 0
    bottom 0
    opacity 1
    transition .3s right, .2s opacity
  
  &:hover
    color $color
    text-decoration $td
    &:after
      right -50%
      opacity 0
    
    &:before
      left -50%
      opacity 0

border-radius($radius) 
  border-radius $radius
  -webkit-border-radius $radius
  -moz-border-radius $radius

box-shadow($shadow) 
  box-shadow $shadow
  -webkit-box-shadow $shadow
  -moz-box-shadow $shadow

transition($transition) 
  -webkit-transition $transition
  -moz-transition $transition
  -ms-transition $transition
  -o-transition $transition
  transition $transition

//responsive
Rem($px) 
  $px / 16px + 0rem

