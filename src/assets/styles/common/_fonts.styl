@font-face
	font-family 'Kaushan'
	src url('../../assets/fonts/KaushanScript-Regular.otf')

@font-face
	font-family 'Roboto'
	src url('../../assets/fonts/Roboto-Regular.ttf')
	font-weight normal
	font-style normal

@font-face
	font-family 'Roboto-bold'
	src url('../../assets/fonts/Roboto-Bold.ttf')
	font-weight normal
	font-style normal

@font-face
	font-family 'Roboto-bolditalic'
	src url('../../assets/fonts/Roboto-BoldItalic.ttf')
	font-weight normal
	font-style normal

@font-face
	font-family 'Roboto-italic'
	src url('../../assets/fonts/Roboto-Italic.ttf')
	font-weight normal
	font-style normal

@font-face
	font-family 'Roboto-light'
	src url('../../assets/fonts/Roboto-Light.ttf')
	font-weight normal
	font-style normal

@font-face
	font-family 'Roboto-Medium'
	src url('../../assets/fonts/Roboto-Medium.ttf')
	font-weight normal
	font-style normal

Font($style = regular)
	font-family 'Roboto'

	if $style == kaushan
		font-family 'Kaushan'

	if $style == bold
		font-family 'Roboto-bold'

	if $style == light
		font-family 'Roboto-light'

	if $style == medium
		font-family 'Roboto-Medium'
    
  if $style == italic
		font-family 'Roboto-italic'