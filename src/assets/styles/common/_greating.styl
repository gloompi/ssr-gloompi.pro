/************************************************
Стандартная настройка!!!
************************************************/

// adjustment styles
body,
html
  Font()
  width 100%
  height 100%
  font-size 16px
  padding 0
  margin 0
  color $text

body
  font-size 16px
  line-height 1.42
  -webkit-font-smoothing antialiased
  background $white

*
	box-sizing border-box

.container
	position relative
	max-width 1200px
	margin 0 auto

li
	list-style none

ul
  padding 0
  margin 0

a, button
	text-decoration none
	cursor pointer
	transition(.3s)

footer
	width 100%
	position relative

h1,h2,h3,h4,h5,h6
	margin 0