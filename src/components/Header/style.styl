@import '../../assets/styles/main'

.header
  position: relative
  width 100%
  height 100vh
  min-height 570px
  overflow hidden

  &__container
    display flex
    align-items: center
    justify-content space-between
    flex-direction column
    height 100%
    min-height 100%

  &__top
    display flex
    align-items: center
    justify-content: space-between
    width 100%
    
  &__star
    color #BCF
    text-align center
    position absolute

  &__tooltip
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    height 100%

    &_pic
      display: flex
      align-items: center
      justify-content: center
      width: 180px
      height: 180px
      border-radius: 50%
      overflow: hidden
      margin-bottom: 25px
      img
        height: 100%

    &_title
      Font(kaushan)
      font-size 35px
      color: $white
      margin-bottom 25px
      text-align center

      +tablets()
        font-size 30px

    &_description
      Font(light)
      font-size 18px
      color: $white
      padding: 10px 25px
      text-align center
      border 1px solid $white
      border-left: none
      border-right: none

  &__bg
    position: absolute
    left: 0
    bottom: 0
    width: 120%
    height: 110%
    background: url('../../assets/images/bg.png')
    background-size: 100% auto
    background-repeat: no-repeat
    background-position: 0 100%

.hello
  position: relative
  width: 100%
  height: 100vh
  overflow: hidden

.video__bg_wrap
  position: absolute
  display flex
  align-items: center
  justify-content: center
  left: 0
  top: 0
  width: 110%
  height: 100vh
  min-height 470px

.video__bg
  position: relative
  width: 100%
  @include laptops()
    width: auto
    height: 100%

.menu
  position relative
  padding 10px 15px 0 0

  &__btn
    position relative
    display flex
    align-items: center
    justify-content center
    width: 30px
    height 22px
    transition: .3s

    &.active
      position fixed
      top: 15px
      right 25px
      z-index: 1800
      span
        display none
      
      &:after
        top: 18px
        transform: rotate(45deg)
      
      &:before
        transform: rotate(-45deg)

    span, &:after, &:before
      width 100%
      height 3px
      border-radius: 15px
      background-color: $white
      transition: .3s

    &:after, &:before
      content: ''
      position absolute
      height 3px
      left: 0
      top: 0
    
    &:before
      top: auto
      bottom: 0

  &__list
    position fixed
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    left: 0
    top: 0
    width: 100%
    height 100vh
    background: $hover-blue
    background: -moz-linear-gradient(-45deg, $hover-blue 0%, $hover-blue 12%, $blue 76%, $blue 91%, $blue 100%)
    background: -webkit-linear-gradient(-45deg, $hover-blue 0%, $hover-blue 12%, $blue 76%, $blue 91%, $blue 100%)
    background: linear-gradient(135deg, $hover-blue 0%, $hover-blue 12%, $blue 76%, $blue 91%, $blue 100%)
    z-index 1200

  &__item
    margin-bottom 25px

    &:last-child
      margin-bottom 0
  
  &__link
    Font(kaushan)
    font-size 25px
    position relative
    display flex
    align-items: center
    color $white
    padding 0 15px 5px

    i 
      margin-right 10px

    &:after, &:before
      content: ''
      position absolute
      height 3px
      width 50%
      left: -100%
      bottom: 0
      background-color $white
      border-radius: 15px
      opacity 0
      transition: .3s opacity .2s left .2s right

    &:after
      left: auto
      right -100%

    &.active, &:hover
      &:after
        opacity 1
        right 2px
      &:before
        opacity 1
        left: 2px

.scroll__btn
  position relative
  display flex
  align-items: center
  justify-content center
  min-width 50px
  min-height 50px
  color: $white
  font-size 25px
  margin-bottom 50px
  z-index 200