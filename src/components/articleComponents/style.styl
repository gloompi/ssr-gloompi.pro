@import '../../assets/styles/main'

.article
  &__wrap
    position relative
    z-index 500

  &__list
    display flex
    align-items: center
    justify-content: flex-start
    flex-direction: column
    width 100%
    padding: 50px 0
  
  &__item
    width 100%
    margin-bottom 50px
    
    &:last-child
      margin-bottom 0
    
  &__link
    position relative
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    border-radius: 5px
    overflow hidden

    img 
      position relative
      width 100%

    &:hover
      .article__container
        top: 0
        opacity 1

  &__container
    position absolute
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    height 100%
    left 0
    top: 100%
    padding: 25px
    background-color: rgba($black, .8)
    opacity 0
    transition: .3s

  &__title
    Font(medium)
    font-size 25px
    color $white
    margin-bottom 25px

  &__content
    font-size 18px
    color $white