@import '../../assets/styles/main'

.article
  &__wrap
    position relative
    z-index 500

  &__list
    display flex
    align-items: center
    justify-content: flex-start
    flex-direction: column
    width 100%
    padding: 50px 0
  
  &__item
    width 100%
    margin-bottom 50px
    
    &:last-child
      margin-bottom 0
    
  &__link
    position relative
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    border-radius: 5px
    overflow hidden

    img 
      position relative
      width 100%

    &:hover
      .article__container
        top: 0
        opacity 1

  &__container
    position absolute
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    height 100%
    left 0
    top: 100%
    padding: 25px
    background-color: rgba($black, .8)
    opacity 0
    transition: .3s

  &__title
    Font(medium)
    font-size 25px
    color $white
    margin-bottom 25px

  &__content
    font-size 18px
    color $white

  &__modal
    position relative
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width 100%
    min-height 100vh
    background-color $black

    &_img
      position fixed
      left: 50%
      top: 50%
      width 100%
      transform: translate(-50%, -50%)
      
      +laptops()
        width: auto
        height 100%

    &_container
      position relative
      display flex
      align-items: center
      justify-content flex-start
      flex-direction: column
      width 80%
      min-height calc(100vh - 250px)
      margin-top 250px
      padding: 35px
      background-color: $bg

      +tablets()
        width 100%
        padding: 25px

      +phones()
        padding: 15px

    &_title
      Font(medium)
      font-size 35px
      color $text
      text-shadow: 2px 2px $blue
      text-transform uppercase

      +tablets()
        font-size 30px
      
      +phones()
        font-size 25px

    &_date
      Font(kaushan)
      font-size 16px
      color $hover-blue
      margin-bottom 25px

      +tablets()
        font-size 14px

    &_content
      Font()
      font-size 18px
      color $text
      width 100%
      text-align left

      +phones()
        font-size 16px