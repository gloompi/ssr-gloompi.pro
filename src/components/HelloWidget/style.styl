@import '../../assets/styles/main'

.hello__widget_wrap
  display: flex
  align-items: center
  justify-content: center
  position: relative
  width: 100%
  height: 100%

.hello__widget_container
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  min-width: 360px
  background-color: rgba(#212121, .3)
  border-radius: 5px
  padding: 25px 0 0
  color: $white
  overflow: hidden
  @include phones()
    min-width: auto
    width: 90%

.hello__widget_pic
  display: flex
  align-items: center
  justify-content: center
  width: 150px
  height: 150px
  border-radius: 50%
  overflow: hidden
  margin-bottom: 25px
  img
    height: 100%

.hello__widget_title
  font-size: rem(25px)
  text-align: center

.hello__widget_wrap .social__list .social__item .social__link
  color: $blue
  &:hover
    color: $white

.hello__nav_mnu
  display: flex
  justify-content: space-between
  width: 100%
  height: 40px
  color: $white
  margin-top: 25px
  .hello__nav_item
    display: flex
    align-items: center
    justify-content: center
    position: relative
    height: 100%
    background-color: $blue
    color: $white
    transition: .3s
    &:first-child
      width: 35%
    &:nth-child(2n)
      width: 38%
    &:last-child
      width: 27%
    &:first-child, &:nth-child(2n)
      &:after
        content: ""
        position: absolute
        display: block
        width: 2px
        height: 100%
        background-color: $white
        right: 0
        top: 0
    &:hover
      background-color: #093C97

.social__list
  position: relative
  display: flex
  align-items: center
  padding: 10px 0 0 15px
  .social__item
    margin-right: 15px
    .social__link
      font-size: 25px
      color: $white
      cursor: pointer
      &:hover
        color: $blue