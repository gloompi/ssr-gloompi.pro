@import '../../assets/styles/main'

.works__list
  display flex
  align-items: flex-start
  justify-content space-around
  flex-wrap: wrap
  background: $bg
  padding: 25px
  z-index 100

.works__item
  position relative
  display flex
  align-items: center
  justify-content: center
  width 23%
  height 230px
  margin-bottom 25px
  cursor pointer
  overflow hidden

  img 
    height: 100%
    width auto
  
  .popup__wrap
    Font(kaushan)
    font-size 28px
    position absolute
    display flex
    align-items: center
    justify-content: center
    width 100%
    height 100%
    left 0
    bottom -100%
    background-color rgba($hover-blue, .8)
    transition: .3s opacity bottom
    opacity 0

  &:hover
    .popup__wrap
      bottom: 0
      opacity 1

.works__category
  &_list
    position relative
    display flex
    align-items: center
    justify-content: center
    padding: 0 25px 50px
    z-index 100

  &_item
    border 1px solid $blue

    &:last-child
      border-right: 1px solid $blue

  &_link
    Font(medium)
    font-size 20px
    color $blue
    text-transform uppercase
    padding: 5px 25px
    border-right: none
    transition: .3s

    &:hover
      background-color $hover-blue
      color: $white

.slider
  position relative
  z-index: 600

  &__container
    position relative
    padding: 25px
    display flex
    align-items: flex-start
    justify-content: space-between
    width 80%
    height 90%
    z-index 600
  &__close
    position absolute
    left: calc(100% + 10px)
    top: 0
    font-size 30px
    cursor pointer

  &__prev, &__next
    position: absolute
    font-size 70px
    right calc(100% + 15px)
    top: 50%
    color $white
    transform: translateY(-50%)
    cursor pointer
  
  &__next
    right auto
    left calc(100% + 15px)

  &__content
    font-size 16px

  &__link
    Font(kaushan)
    display block
    position relative
    font-size 20px
    background-color $blue
    color $white
    padding: 5px 15px
    border-radius: 5px
    transition .3s

    &:hover
      color $blue
      background-color $white

  &__info
    display flex
    flex-direction: column
    align-items: flex-start
    width 48%
    min-height 50%
  
    &_title
      Font(kaushan)
      font-size 35px

    &_date
      Font(light)
      font-size 14px
      margin-bottom 15px

.pics
  &__list
    display flex
    flex-direction: column
    align-items: center
    justify-content flex-start
    width: 48%
    max-height 100%
    overflow-y: scroll
  
  &__item
    width 100%
    margin-bottom 25px
    border-radius(10px 0 0 10px)

    img 
      width 100%
      border-radius(10px 0 0 10px)

    &:last-child
      margin-bottom 0

.tech
  &__list
    display flex
    align-items: center
    justify-content flex-start
  
  &__item
    font-size 25px
    margin-right 15px

    &:last-child
      margin-right 0