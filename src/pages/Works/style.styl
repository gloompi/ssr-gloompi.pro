@import '../../assets/styles/main'

h1
  position: relative
  width: 100%
  min-height: 100vh
  overflow: hidden

.works__main
  position relative
  width 100%
  min-height 800px
  background $bg
  padding 50px 0
  &:after, &:before
    content: ''
    position absolute
    left: 50%
    top: -233px
    width 100%
    height 500px
    background-color: $bg
    transform: rotate(-15deg)
    z-index 0

  &:after
    left: auto
    right: 50%
    transform: rotate(15deg)

.slider
  &__wrap
    position: fixed
    width 100%
    height 100vh
    left 0
    top: 0
    background: rgba($black, .7)
    z-index 1000

  &__animate
    display flex
    align-items: center
    justify-content: center
    width 100%
    height 100%