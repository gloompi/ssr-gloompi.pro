@import '../../assets/styles/main'

h1
  position: relative
  width: 100%
  min-height: 100vh
  overflow: hidden

.works__main
  width 100%
  background $bg
  padding 50px 0

.slider
  &__wrap
    position: fixed
    width 100%
    height 100vh
    left 0
    top: 0
    background: rgba($black, .7)

  &__animate
    display flex
    align-items: center
    justify-content: center
    width 100%
    height 100%