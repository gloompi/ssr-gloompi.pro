@import '../../assets/styles/main'
  
.articles__main
  position relative
  width 100%
  min-height 800px
  background $bg
  padding 50px 0
  z-index: 200
  &:after, &:before
    content: ''
    position absolute
    left: 50%
    top: -233px
    width 100%
    height 500px
    background-color: $bg
    transform: rotate(-15deg)
    z-index 0

  &:after
    left: auto
    right: 50%
    transform: rotate(15deg)
